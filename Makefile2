# Makefile that will prdouce the executable for the Wine Prgram!
# By: Ari Sherman
# Class: CS5201 HW #1
# Date: 1.23.18

CXX = /usr/bin/g++
CXXFLAGS = -g -Wall -W -pedantic-errors

OBJECTS =  driver.o   \
           parser.o   \
           scanner.o      \
           signal.o    \
           token.o    \
           tokenlist.o     \

.SUFFIXES: .cpp

.cpp.o: $<
    ${CXX} -c ${CXXFLAGS} $< -o $@

default: all

all: driver

driver: ${OBJECTS}
    ${CXX} ${CXXFLAGS} ${OBJECTS} -o $@

clean:
    -@rm core > /dev/null 2>&1
    -@rm driver > /dev/null 2>&1
    -@rm ${OBJECTS} > /dev/null 2>&1

# The Dependency lists!
driver.o:   signal.h parser.h scanner.h program.cpp
parser.o:   parser.h signal.h studio.h parser.cpp
scanner.o:  scanner.h signal.h scanner.cpp
signal.o: 	signal.h signal.cpp
